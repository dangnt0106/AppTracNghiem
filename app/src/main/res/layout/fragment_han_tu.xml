<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OnTap.OnTapFragment"
    android:orientation="vertical"
    android:gravity="left|center"
    android:background="@drawable/kitty2"
    >
    <Button
        android:id="@+id/hantuN5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:backgroundTint="#20b2aa"
        android:text="Kanji N5"
        android:padding="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/hantuN4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:backgroundTint="#698B22"
        android:text="Kanji N4"
        android:padding="20dp"
        android:textSize="30sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/hantuN3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:backgroundTint="#ECAB53"
        android:text="Kanji N3"
        android:padding="20dp"
        android:textSize="30sp"
        android:textStyle="bold"/>



</LinearLayout>